{
  "name": "deck-shelves",
  "version": "0.1.0",
  "description": "Put Steam Shelves into Deck UI.",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "package": "bash scripts/package_zip.sh",
    "install:deck": "bash scripts/install_deck.sh"
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "home",
    "shelves",
    "collections"
  ],
  "license": "MIT",
  "devDependencies": {
    "@decky/rollup": "^1.0.2",
    "@decky/ui": "^4.11.0",
    "@rollup/rollup-linux-x64-musl": "^4.53.3",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.1",
    "rollup": "^4.53.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@decky/api": "^1.1.3",
    "react-icons": "^5.3.0",
    "tslib": "^2.7.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
